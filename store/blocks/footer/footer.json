{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#paulette",
      "vtex.menu@2.x:menu#creaciones",
      "image#logofooter",
      "vtex.menu@2.x:menu#shoponline",
      "vtex.menu@2.x:menu#bolsa"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3,
      "horizontalAlign": "CENTER",
      "fullWidth": true
    }
  },

  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [

      "flex-layout.row#1-footer-mobile"
    ]
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4,
      "blockClass":"rowmobile"
    },
    "children": [
      "flex-layout.col#logo-mobile",
      "vtex.menu@2.x:menu#footer-mobile"]
  },

  "flex-layout.col#logo-mobile":{
    "children":[
      "image#logofooter"
    ],"props":{
      "horizontalAlign":"center",
      "blockClass": "footerLogo"
    }
  },

  "vtex.menu@2.x:menu#paulette": {
    "props": {
      "blockClass": "footer√§ulette"
    }
  },

  "vtex.menu@2.x:menu#creaciones": {
    "props": {
      "blockClass": "footerCreaciones"
    }
  },
  "vtex.menu@2.x:menu#shoponline": {
    "props": {
      "blockClass": "footerOnline"
    }
  },
  "vtex.menu@2.x:menu#bolsa": {
    "props": {
      "blockClass": "footerBolsa"
    }
  }

}


